<?xml version="1.0" encoding="UTF-8"?>


<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.ColorPicker?>

<?import javafx.scene.control.CustomMenuItem?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<?import javafx.scene.control.skin.ColorPalette.ColorPickerGrid?>
<?import javafx.scene.control.skin.SplitPaneSkin.Content?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.image.ImageView?>
<BorderPane fx:id="borderPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.PainController"
            prefHeight="400" prefWidth="600">

    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">

                    <MenuItem text="Save" onAction="#onSave" accelerator="Ctrl+S"/>
                    <MenuItem text="Save as" onAction="#onSaveAs" accelerator="Ctrl+Shift+S"/>
                    <MenuItem text="Load Image" onAction="#onLoadImage" accelerator="Ctrl+L"/>
                </Menu>


                <Menu text = "Help">
                    <MenuItem text="How to use" onAction="#onHelp"/>
                    <MenuItem text = "About" onAction="#onAbout"/>
                </Menu>


                <Menu text = "Tools">
                    <MenuItem text = "Brush" onAction="#onBrush"/>
                    <MenuItem text = "Eraser" onAction="#onEraser"/>
                    <MenuItem text = "Dropper" onAction="#onDropper"/>
                    <MenuItem text = "Move Image" onAction="#onMoveImage"/>
                    <MenuItem text = "Select area" onAction="#onSelectionTool"/>

                </Menu>


                <Menu text = "Shapes">
                    <MenuItem text = "2 Point Line" onAction="#onStraightLine"/>
                    <MenuItem text = "Square" onAction="#onSquare"/>
                    <MenuItem text = "Rectangle" onAction="#onRectangle"/>
                    <MenuItem text = "Triangle" onAction="#onTriangle"/>
                    <MenuItem text = "Ellipse" onAction="#onEllipse"/>
                    <MenuItem text = "Circle" onAction="#onCircle"/>
                    <MenuItem text = "Star" onAction="#onStar"/>
                </Menu>

                <Menu text = "Actions">
                    <MenuItem text = "Undo" onAction="#onUndo" accelerator="Ctrl + Z"/>
                    <MenuItem text = "Redo" onAction="#onRedo" accelerator="Ctrl + Y"/>
                </Menu>



            </MenuBar>

            <ToolBar>
                <HBox alignment="CENTER" spacing="5">
                    <Label text = "Brush Size"/>
                    <TextField fx:id="brushSize" text="1" maxWidth="40" onAction="#onBrushSize"/>
                    <ColorPicker fx:id="colorPicker">
                        <value>
                            <Color fx:constant="BLACK"/>
                        </value>
                    </ColorPicker>
                    <CheckBox fx:id="dashBox" text="Dashed Line Mode" onAction="#isDashChecked"/>

                </HBox>
            </ToolBar>


        </VBox>

    </top>

    <center>
        <ScrollPane fx:id="scrollPane" >
            <StackPane fx:id="workspaceStack" prefWidth="5000" prefHeight="5000">
                <Pane fx:id="imageLayer">
                    <ImageView fx:id="imageView"/>
                </Pane>
                <Pane fx:id="drawingLayer">
                    <Canvas fx:id="canvas" width="5000" height="5000"/>
                </Pane>
                <Pane fx:id="backgroundLayer"/>
            </StackPane>
        </ScrollPane>
    </center>


</BorderPane>
